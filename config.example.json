{
    "dns": "localhost",
    "port": 8080,
    "protocol": "http",
    "ssl": {
        "key": "/certificates/ssl/key.pem",
        "cert": "/certificates/ssl/cert.pem"
    },
    "wss": {
        "port": 8081,
        "interval": 1000
    },
    "cloudflareProxy": false,
    "apiAuthMethod": "key",
    "staticPage": true,
    "runAsRoot": false,
    "logs": true,
    "replication": true,
    "whitelist": [
        "127.0.0.1"
    ],
    "databases": {
        "SQLite": {
            "type": "sqlite",
            "database": "database.sqlite",
            "charset": "utf8mb4",
            "role": "master",
            "enabled": true,
            "synchronize": true,
            "logging": false,
            "entities": ["src/database/entities/*.entity.ts"],
            "migrations": ["src/database/migrations/*.ts"]
        }
    },
    "jwt": {
        "expiresIn": "1min"
    }
}
